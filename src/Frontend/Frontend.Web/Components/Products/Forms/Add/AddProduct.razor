@using Backend.Domain.Entities.Products;
@using Frontend.Web.Services.Products;
@inject ProductService _productService

<div class="container" style="margin-top:30px">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>Sign In </strong></h3></div>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="username">SKU</label>
                        <input type="email" class="form-control" id="userName" placeholder="Enter email" @bind="@model.SKU">
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="password" class="form-control" id="passWord" placeholder="Password" @bind="@model.Name">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="password" class="form-control" id="passWord" placeholder="Password" @bind="@model.Description">
                    </div>
                    <div class="form-group">
                        <label for="value">Value</label>
                        <input type="password" class="form-control" id="passWord" placeholder="Password" @bind="@model.Value">
                    </div>
                    <div class="form-group">
                        <label for="liquidWeight">LiquidWeight</label>
                        <input type="password" class="form-control" id="passWord" placeholder="Password" @bind="@model.LiquidWeight">
                    </div>
                    <div class="form-group">
                        <label for="totalWeight">TotalWeight</label>
                        <input type="password" class="form-control" id="passWord" placeholder="Password" @bind="@model.TotalWeight">
                    </div>
                    <button type="button" @onclick="CreateProduct" class="btn btn-default">Log in</button>
                </form>
            </div>
        </div>
    </div>
</div>

@code
{
    private Product model = new Product();
    public async Task CreateProduct() => await _productService.CreateProduct(model);
}