@code
{
    public string? inlineStyle => ShowModal ? "display: block;" : "display: none;";
    public string? modalClass => ShowModal ? "show" : null;
}

@code
{
    public void CloseModal() => ShowModal = !ShowModal;
}

@code
{
    [Parameter] public bool ShowModal { get; set; }
}